{
    "name": "vico/wordpress-starter",
    "authors": [
        {
            "name": "vico",
            "email": "laplace.victor@gmail.com"
        }
    ],
    "type"        : "project",
    "repositories": [
        {
            "type": "composer",
            "url" : "https://wpackagist.org"
        }
    ],
    "config"      : {
        "vendor-dir": "public_html/app/vendor"
    },
    "require": {
        "johnpbloch/wordpress": ">=4.9",
        "timber/timber": "^1.8",
        "yoast/wordpress-seo": "^9.2",
        "roots/soil": "^3.7",
        "wpackagist-plugin/akismet": "^4.1",
        "wpackagist-plugin/wp-migrate-db": "^1.0",
        "wpackagist-plugin/advanced-custom-fields": "^5.7",
        "wpackagist-plugin/better-wp-security": "^7.2",
        "wpackagist-plugin/query-monitor": "^3.1",
        "wpackagist-plugin/wordpress-importer": "^0.6.4",
        "wpackagist-plugin/wp-super-cache": "^1.6",
        "wpackagist-plugin/classic-editor": "^1.0",
        "wpackagist-plugin/regenerate-thumbnails": "^3.0",
        "wpackagist-plugin/simple-custom-post-order": "^2.4"
    },
    "extra"       : {
        "wordpress-install-dir": "public_html/wp",
        "installer-paths": {
            "public_html/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "public_html/app/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}
